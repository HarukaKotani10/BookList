@model IEnumerable<Book>

@{
    ViewData["Title"] = "Index";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-controller="BookList" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> &nbsp;Create New Book
        </a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if(Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Author
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                        <tr>
                            <td width="50%">@obj.Name</td>
                            <td width="50%">@obj.Author</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="BookList" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                        Edit
                                    </a>
                                    <a asp-controller="BookList" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No books available.</p>
            }
        </form>
    </div>

</div>

